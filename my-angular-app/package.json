{
  "name": "my-angular-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:client": "ng serve",
    "start:server": "nodemon --watch src/server.ts --exec tsx src/server.ts",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
